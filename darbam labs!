/* Testēju darbam */

.form-group {
  position: relative;
  margin-bottom: 20px;
}

input {
  width: 100%;
  padding: 20px 10px;
  font-size: 16px;
  border: none;
  outline: none;
  background-color: #e0e0e0;
  color: black;
  border-radius: 5px;
  box-sizing: border-box;
}

label {
  position: absolute;
  left: 10px;
  top: 20px; /* Position label inside the input field */
  font-size: 18px;
  color: black;
  pointer-events: none; /* Prevents label from interfering with input */
  transition: all 0.3s ease-in-out; /* Smooth transition */
}

/* When the input is focused or filled (valid), move the label */
input:focus + label,
input:not(:focus):valid + label {
  top: -10px;
  font-size: 12px;
  color: gray;
}

/* Optional: Change background color when input is focused */
input:focus {
  background-color: #fff;
}

/*Darba testam beigas*/
